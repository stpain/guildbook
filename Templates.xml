					<Color r="1" g="1" b="1"/>
				</FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnMouseDown>
                self:GetParent():ChatBubble_OnMouseDown(self)
            </OnMouseDown>
            <OnHyperlinkEnter>
                if link then
                    GameTooltip:SetOwner(self, 'ANCHOR_TOPRIGHT')
                    GameTooltip:SetHyperlink(link)
                    GameTooltip:Show()
                end
            </OnHyperlinkEnter>
            <OnHyperlinkLeave>
                GameTooltip_SetDefaultAnchor(GameTooltip, UIParent)
                <!-- GameTooltip:Hide() -->
            </OnHyperlinkLeave>
        </Scripts>
    </Frame>
    


